{
  "name": "gitlab-ci-test",
  "version": "1.0.0",
  "type": "module",
  "description": "Testing GitLab CI pipelines locally",
  "main": "src/index.js",
  "bin": "bin.js",
  "files": [
    "src"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "node bin.js",
    "build": "echo 'No build step'",
