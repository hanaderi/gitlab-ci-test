    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/to-be-continuous/tools/gitlab-ci-test.git"
  },
  "bugs": {
    "url": "https://gitlab.com/to-be-continuous/tools/gitlab-ci-test/issues"
  },
  "homepage": "https://gitlab.com/to-be-continuous/tools/gitlab-ci-test",
